@using MyProducts.Web.Models.Products
@model CreateProductViewModel


@section scripts
{
    <script src="~/js/views/products/create.js" asp-append-version="true"></script>
}

<h2>
    @L("NewProduct")
</h2>

<form id="ProductCreationForm">

    <div class="form-group">
        <label for="Name">@L("Name")</label>
        <input type="text" name="Name" class="form-control" placeholder="@L("Name")" required maxlength="@MyProducts.Products.Product.MaxNameLength">
    </div>

    <div class="form-group">
        <label for="Description">@L("Description")</label>
        <input type="text" name="Description" class="form-control" placeholder="@L("Description")" maxlength="@MyProducts.Products.Product.MaxDescriptionLength">
    </div>

    <div class="form-group">
        @Html.Label(L("Category"))
        @Html.DropDownList(
            "CategoryId",
            Model.Category,
            new
            {
                @class = "form-control",
                id = "CategoryCombobox"
            })
    </div>

    <button type="submit" class="btn btn-default">@L("Save")</button>

</form>
